{
  "name": "static-to-ssg",
  "description": "A CLI tool to convert a static site into an SSG site to be used as a baseline",
  "version": "0.0.1",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib/**/*.js"
  ],
  "type": "module",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "angular-html-parser": "^4.0.1",
    "fastest-levenshtein": "^1.0.16",
    "js-yaml": "^4.1.0",
    "jsdom": "^21.1.2"
  },
  "scripts": {
    "publish": "npm run build && np",
    "test": "c8 ava",
    "build": "tsc",
    "start": "tsc > /dev/null || node --experimental-specifier-resolution=node lib/index.js",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' 'test/**/*.ts' --write"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/jsdom": "^21.1.2",
    "ava": "^5.0.0",
    "c8": "^7.13.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CloudCannon/static-to-ssg.git"
  },
  "author": "CloudCannon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CloudCannon/static-to-ssg/issues"
  },
  "homepage": "https://github.com/CloudCannon/static-to-ssg#readme",
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "environmentVariables": {
      "TS_NODE_LOG_ERROR": "true"
    },
    "require": [
      "ts-node/register"
    ]
  }
}
